{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/submit-to-mongodb",
      "dest": "/api/submit-to-mongodb.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "npm": {
    "buildCommand": "npm run build",
    "installCommand": "npm install"
  }
}
